{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "alwaysStrict": false,
    // "strictNullChecks": true,
    // "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
